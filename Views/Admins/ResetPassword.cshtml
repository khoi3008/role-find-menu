@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reset Password</h1>
<section class="content container">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Reset Password User</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-action="/Admins/ResetPassword" class="mx-auto">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">User Email:</label>
                            <div class="input-group">
                                <input type="email" class="form-control" id="exampleInputEmail1" name="userEmail"
                                    value="@ViewBag.email">
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password Old:</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="exampleInputPasswordOld"
                                    name="passwordOld" required>
                                <div class="input-group-append" style="display: flex; align-items: center;">
                                    <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePasswordVisibility('exampleInputPasswordOld')">
                                        <i id="passwordToggleIconOld" class="fa fa-eye-slash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPasswordNew">New Password:</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="exampleInputPasswordNew"
                                    name="passwordNew" required>
                                <div class="input-group-append" style="display: flex; align-items: center;">
                                    <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePasswordVisibility('exampleInputPasswordNew')">
                                        <i id="passwordToggleIconNew" class="fa fa-eye-slash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPasswordConfirm">Confirm New Password:</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="exampleInputPasswordConfirm"
                                    name="passwordConfirm" required>
                                <div class="input-group-append" style="display: flex; align-items: center;">
                                    <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePasswordVisibility('exampleInputPasswordConfirm')">
                                        <i id="passwordToggleIconConfirm" class="fa fa-eye-slash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>


                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

<script>
    function togglePasswordVisibility(inputId) {
        var input = document.getElementById(inputId);
        var iconId = "passwordToggleIcon" + inputId.replace("exampleInputPassword", "");

        if (input.type === "password") {
            input.type = "text";
            document.getElementById(iconId).classList.remove("fa-eye-slash");
            document.getElementById(iconId).classList.add("fa-eye");
        } else {
            input.type = "password";
            document.getElementById(iconId).classList.remove("fa-eye");
            document.getElementById(iconId).classList.add("fa-eye-slash");
        }
    }

</script>
